

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.dart]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.xml]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.yaml]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.lock]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.gradle]
indent_style = space
indent_size = 4
continuation_indent_size = 0
